<style lang="scss">
  @import '@/scss/_constantes.scss';
  .enflujoLogo {
    fill: #000;

    &.menuSuperior {
      fill: #fff;
      background-color: var(--colorPrincipal);
      width: var(--anchoMarco);
      height: var(--anchoMarco);
      padding: 8px;
    }

    &.inicio {
      display: none;
    }
  }

  @media (min-width: $minCelular) {
    .enflujoLogo {
      &.inicio {
        fill: var(--colorPrincipal);
        width: 80px;
        margin-right: 25px;
        display: block;
      }
    }
  }
</style>
