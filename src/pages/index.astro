---
import Plantilla from '@/plantillas/Plantilla.astro';
import { gql, obtenerDatos } from '@/utilidades/ayudas';
import Logo from '@/componentes/svg/Logo.astro';

const General = gql`
  query {
    general {
      nombre
      subtitulo
      descripcion
      contenido
      color
      imagen {
        id
        title
        filename_download
        width
        height
      }
    }
  }
`;

const { general } = await obtenerDatos(General);
---

<Plantilla descripcion={general.descripcion} imagen={general.imagen}>
  <main id="inicio">
    <div id="lado1" class="lado">
      <Logo clase="inicio" />
      <div class="titulos">
        <h1 class="titulo">{general.nombre}</h1>
        <p id="texto" class="subtitulo">{general.subtitulo}</p>
      </div>
    </div>

    <div class="contenido"><p>{general.contenido}</p></div>
  </main>
</Plantilla>

