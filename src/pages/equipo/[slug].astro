  }

  // Pantallas medianas (Tablets)
  @media (min-width: $minTablet) {
    .resumen {
      flex-direction: row;
      flex-wrap: nowrap;
      align-items: stretch;
    }

    .nombre {
      margin-top: 0;
    }

